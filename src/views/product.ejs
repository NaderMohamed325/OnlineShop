<%- include('parts/header') %>
<%- include('parts/navbar') %>

<style>
    body {
        background: linear-gradient(to right, #1f1c2c, #928dab);
        min-height: 100vh;
        color: white;
    }

    .container {
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .product-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 10px rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        overflow: hidden;
        padding: 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .product-image {
        flex: 1;
        max-width: 50%;
    }

    .product-image img {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .product-details {
        flex: 1;
        max-width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .product-title {
        font-size: 2rem;
        font-weight: bold;
    }

    .product-price {
        font-size: 1.5rem;
        color: #ffcc00;
        margin: 10px 0;
    }

    .product-description {
        color: #d1d1e9;
        margin-bottom: 20px;
    }

    .quantity-input {
        width: 60px;
        text-align: center;
        border-radius: 6px;
        border: 2px solid #ffcc00;
        padding: 5px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ff7eb3, #ffcc00);
        border: none;
        padding: 10px 15px;
        font-size: 1rem;
        border-radius: 8px;
        transition: all 0.3s;
        font-weight: bold;
        cursor: pointer;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #ff4d6d, #ff9100);
        transform: scale(1.1);
        box-shadow: 0 0 10px rgba(255, 140, 0, 0.8);
    }

    @media (max-width: 768px) {
        .product-card {
            flex-direction: column;
            text-align: center;
        }

        .product-image, .product-details {
            max-width: 100%;
        }
    }
</style>

<div class="container">
    <div class="product-card">
        <div class="product-image">
            <img src="/<%= product.image %>" alt="<%= product.name %>">
        </div>
        <div class="product-details">
            <h1 class="product-title"><%= product.name %></h1>
            <p class="product-description"><%= product.description %></p>
            <p class="product-price">$<%= product.price %></p>
            <form action="/cart" method="post">
                <input type="hidden" name="product_id" value="<%= product._id %>">
                <div class="d-flex align-items-center">
                    <label for="quantity_<%= product._id %>" class="me-2"><strong>Qty:</strong></label>
                    <input type="number" id="quantity_<%= product._id %>" name="quantity" min="1" value="1" class="quantity-input">
                    <button type="submit" class="btn btn-primary ms-3">Add to Cart</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('parts/footer') %>
