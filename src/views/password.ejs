<%- include('parts/header') %>
<%- include('parts/navbar') %>

<style>

    /* ðŸŽ¨ Background */
    body {
        background: linear-gradient(to right, #1f1c2c, #928dab);
        min-height: 100vh;
        color: white;
        font-family: 'Poppins', sans-serif;
    }

    /* ðŸ–¼ Container Styling */
    .container {
        margin-bottom: 50px;
    }

    /* ðŸ’Ž Glassmorphic Card */
    .card {
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        box-shadow: 0 4px 10px rgba(255, 255, 255, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: white;
    }

    .card:hover {
        transform: scale(1);
        box-shadow: 0 12px 24px rgba(255, 255, 255, 0.25);
    }


    .card-title a {
        color: #ffcc00;
        text-decoration: none;
        transition: color 0.3s;
    }

    .card-title a:hover {
        color: #ff8800;
    }


    /* ðŸ”¥ Animated Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #ff7eb3, #ffcc00);
        border: none;
        padding: 10px 16px;
        font-size: 1rem;
        border-radius: 8px;
        transition: all 0.3s;
        font-weight: bold;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #ff4d6d, #ff9100);
        transform: scale(1);
        box-shadow: 0 0 12px rgba(255, 140, 0, 0.8);
    }

    .form-select option {
        background: #1f1c2c;
        color: white;
    }

    /* ðŸ“± Responsive Layout */
    @media (max-width: 768px) {
        .navbar {
            text-align: center;
        }

        .navbar-nav {
            margin-top: 10px;
        }

        .container.d-flex {
            justify-content: center !important;
        }

        .row {
            justify-content: center;
        }

        .col {
            flex: 0 0 100%;
            max-width: 100%;
        }
    }

    @media (min-width: 992px) {
        .row {
            justify-content: flex-start;
        }

        .col {
            flex: 0 0 calc(33.333% - 20px);
            max-width: calc(33.333% - 20px);
        }
    }

</style>

<div class="container">
    <h1 class="text-center">Forgot Password</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4">
                <form action="/password-forget" method="post">
                    <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul>
                                <% errors.forEach(function(error) { %>
                                    <li><%= error.msg %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>