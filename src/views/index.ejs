<%- include('parts/header') %>
<%- include('parts/navbar') %>

<style>
    /* ðŸ”¥ Stylish Glassmorphic Navbar */
    .navbar {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(12px);
        border-radius: 12px;
        padding: 12px 20px;
    }

    .navbar-brand {
        font-size: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: color 0.3s ease-in-out;
    }

    .navbar-brand:hover {
        color: #ffd700 !important;
    }

    .nav-link {
        font-size: 1.1rem;
        transition: color 0.3s ease-in-out, text-shadow 0.3s ease-in-out;
    }

    .nav-link:hover {
        color: #ffd700 !important;
        text-shadow: 0 0 12px rgba(255, 215, 0, 0.8);
    }

    .navbar-toggler {
        background: rgba(255, 255, 255, 0.15);
        padding: 6px 12px;
        border-radius: 8px;
    }

    .navbar-toggler-icon {
        filter: invert(1);
    }

    /* ðŸŽ¨ Background */
    body {
        background: linear-gradient(to right, #1f1c2c, #928dab);
        min-height: 100vh;
        color: white;
        font-family: 'Poppins', sans-serif;
    }

    /* ðŸ–¼ Container Styling */
    .container {
        margin-bottom: 50px;
    }

    /* ðŸ’Ž Glassmorphic Card */
    .card {
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        box-shadow: 0 4px 10px rgba(255, 255, 255, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: white;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 24px rgba(255, 255, 255, 0.25);
    }

    .card-img-top {
        object-fit: cover;
        height: 200px;
        border-radius: 10px;
    }

    .card-title a {
        color: #ffcc00;
        text-decoration: none;
        transition: color 0.3s;
    }

    .card-title a:hover {
        color: #ff8800;
    }

    .card-text {
        color: #d1d1e9;
    }

    /* ðŸ”¥ Animated Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #ff7eb3, #ffcc00);
        border: none;
        padding: 10px 16px;
        font-size: 1rem;
        border-radius: 8px;
        transition: all 0.3s;
        font-weight: bold;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #ff4d6d, #ff9100);
        transform: scale(1.1);
        box-shadow: 0 0 12px rgba(255, 140, 0, 0.8);
    }

    /* ðŸ“¦ Quantity Input */
    .quantity-input {
        width: 60px;
        text-align: center;
        border-radius: 6px;
        border: 2px solid #ffcc00;
        padding: 6px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    /* ðŸ”µ Dropdown Select */
    .form-select {
        border-radius: 8px;
        padding: 10px;
        background: rgba(255, 255, 255, 0.15);
        color: white;
        border: none;
    }

    .form-select option {
        background: #1f1c2c;
        color: white;
    }

    /* ðŸ“± Responsive Layout */
    @media (max-width: 768px) {
        .navbar {
            text-align: center;
        }

        .navbar-nav {
            margin-top: 10px;
        }

        .container.d-flex {
            justify-content: center !important;
        }

        .row {
            justify-content: center;
        }

        .col {
            flex: 0 0 100%;
            max-width: 100%;
        }
    }

    @media (min-width: 992px) {
        .row {
            justify-content: flex-start;
        }

        .col {
            flex: 0 0 calc(33.333% - 20px);
            max-width: calc(33.333% - 20px);
        }
    }

</style>

<!-- ðŸŸ¡ Category Selector -->
<div class="container d-flex justify-content-center mt-3">
    <form action="/" method="get">
        <div class="input-group">
            <select class="form-select" id="category" name="category">
                <option value="">All Categories</option>
                <% categories.forEach(function(category) { %>
                    <option value="<%= category %>"><%= category %></option>
                <% }); %>
            </select>
            <button type="submit" class="btn btn-primary ms-2">Filter</button>
        </div>
    </form>
</div>

<!-- ðŸ›’ Products Grid -->
<div class="container mt-5">
    <div class="row">
        <% Object.values(products).forEach(function(product) { %>
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img class="card-img-top p-3 rounded" src="<%= product.image %>" alt="<%= product.name %>">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">
                            <a href="/product/<%= product._id %>"><%= product.name %></a>
                        </h5>
                        <p class="card-text flex-grow-1"><%= product.description %></p>
                        <p class="card-text"><strong>Price:</strong> $<%= product.price %></p>
                        <form action="/cart" method="post">
                            <input type="hidden" name="product_id" value="<%= product._id %>">
                            <div class="d-flex align-items-center">
                                <label for="quantity_<%= product._id %>" class="me-2"><strong>Qty:</strong></label>
                                <input type="number" id="quantity_<%= product._id %>" name="quantity" min="1" value="1"
                                       class="quantity-input">
                                <!-- ðŸŸ¢ Add to Cart Button -- make space for the button -->
                                <div class="ms-2">
                                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('parts/footer') %>
