<%- include('parts/header') %>
<%- include('parts/navbar') %>

<style>
    /* üî• GOATED Background */
    body {
        background: linear-gradient(to right, #1f1c2c, #928dab);
        min-height: 100vh;
        color: white;
    }

    .container {
        margin-bottom: 50px;
    }

    /* üíé Glassmorphic Card Design */
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 10px rgba(255, 255, 255, 0.1);
        padding: 10px;
        color: white;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 24px rgba(255, 255, 255, 0.2);
    }

    .card-img-top {
        object-fit: cover;
        height: 200px;
        border-radius: 10px;
    }

    .card-body {
        padding: 20px;
    }

    /* üî• Neon Link Titles */
    .card-title a {
        color: #ffcc00;
        text-decoration: none;
        transition: color 0.3s;
    }

    .card-title a:hover {
        color: #ff8800;
    }

    /* üü¢ Cool Text Colors */
    .card-text {
        color: #d1d1e9;
    }

    /* üü£ GOATED Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #ff7eb3, #ffcc00);
        border: none;
        padding: 10px 15px;
        font-size: 1rem;
        border-radius: 8px;
        transition: all 0.3s;
        font-weight: bold;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #ff4d6d, #ff9100);
        transform: scale(1.1);
        box-shadow: 0 0 10px rgba(255, 140, 0, 0.8);
    }

    .input-group {
        max-width: 300px;
        margin: 20px auto;
    }

    .form-select {
        border-radius: 8px;
        padding: 10px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: none;
    }

    .form-select option {
        background: #1f1c2c;
        color: white;
    }

    /* üîµ Neon Quantity Input */
    .quantity-input {
        width: 60px;
        text-align: center;
        border-radius: 6px;
        border: 2px solid #ffcc00;
        padding: 5px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    /* üñ•Ô∏è Better Grid for Laptops */
    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    @media (min-width: 992px) {
        /* Laptop screens */
        .row {
            justify-content: flex-start;
        }

        .col {
            flex: 0 0 calc(33.333% - 20px);
            max-width: calc(33.333% - 20px);
        }
    }

    @media (max-width: 768px) {
        .container.d-flex {
            justify-content: center !important;
        }
    }
</style>

<!-- üü° Category Selector -->
<div class="container d-flex justify-content-center mt-3">
    <form action="/" method="get">
        <div class="input-group">
            <select class="form-select" id="category" name="category">
                <option value="">All Categories</option>
                <% categories.forEach(function(category) { %>
                    <option value="<%= category %>"><%= category %></option>
                <% }); %>
            </select>
            <button type="submit" class="btn btn-primary ms-2">Filter</button>
        </div>
    </form>
</div>

<!-- üõí Products Grid -->
<div class="container mt-5">
    <div class="row">
        <% Object.values(products).forEach(function(product) { %>
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img class="card-img-top p-3 rounded" src="<%= product.image %>" alt="<%= product.name %>">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">
                            <a href="/product/<%= product._id %>"><%= product.name %></a>
                        </h5>
                        <p class="card-text flex-grow-1"><%= product.description %></p>
                        <p class="card-text"><strong>Price:</strong> $<%= product.price %></p>
                        <form action="/cart" method="post">
                            <input type="hidden" name="product_id" value="<%= product._id %>">
                            <div class="d-flex align-items-center">
                                <label for="quantity_<%= product._id %>" class="me-2"><strong>Qty:</strong></label>
                                <input type="number" id="quantity_<%= product._id %>" name="quantity" min="1" value="1"
                                       class="quantity-input">
                                <!-- üü¢ Add to Cart Button -- make space for the button -->
                                <div class="ms-2">
                                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('parts/footer') %>
